{
  "manifest_version": 3,
  "name": "Error Capture",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
  },
  {
    "matches": ["<all_urls>"],
    "js": ["document_start.js"],
    "run_at": "document_start"
}],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": [
        "<all_urls>"
    ]
    }
  ]
}